<p id="notice"><%= notice %></p>

<%= link_to 'New Tweet', new_tweet_path, class: 'btn btn-sm btn-primary' %>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Message</th>
      <th>Username</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @tweets.each do |tweet| %>
      <tr>
        <td><%= tweet.message %></td>
        <td><%= tweet.user.username %></td>
        <td><%= link_to 'Show', tweet %></td>
        <%# We only allow the current_user to edit and destroy their own tweets %>
        <% if tweet.user_id == current_user.id %>
          <td><%= link_to 'Edit', edit_tweet_path(tweet) %></td>
          <td><%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end -%>
      </tr>
    <% end -%>
  </tbody>
</table>